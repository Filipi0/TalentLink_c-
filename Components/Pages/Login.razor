@page "/"
@page "/login"
@layout EmptyLayout
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-container">
                <div class="logo-icon">
                    <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 6L9 17L4 12" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>
                <h1 class="logo-text">TalentLink</h1>
            </div>
            <p class="login-subtitle">Conectando talentos às melhores oportunidades</p>
        </div>

        <div class="login-form">
            <div class="welcome-message">
                <h2>Bem-vindo de volta!</h2>
                <p>Faça login para acessar as melhores oportunidades de carreira</p>
            </div>

            <button class="btn-google" @onclick="LoginWithGoogle" disabled="@isLoading">
                @if (isLoading)
                {
                    <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                    <span>Conectando...</span>
                }
                else
                {
                    <svg class="google-icon" width="20" height="20" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span>Entrar com Google</span>
                }
            </button>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert @(isError ? "alert-danger" : "alert-info") mt-3" role="alert">
                    @message
                </div>
            }
        </div>

        <div class="login-footer">
            <div class="features-list">
                <div class="feature-item">
                    <svg width="16" height="16" fill="currentColor" class="feature-icon" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.061L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                    </svg>
                    <span>Acesso às melhores vagas do mercado</span>
                </div>
                <div class="feature-item">
                    <svg width="16" height="16" fill="currentColor" class="feature-icon" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.061L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                    </svg>
                    <span>Processo de candidatura simplificado</span>
                </div>
                <div class="feature-item">
                    <svg width="16" height="16" fill="currentColor" class="feature-icon" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.061L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                    </svg>
                    <span>Conexão direta com recrutadores</span>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? message = "";
    private bool isLoading = false;
    private bool isError = false;

    private async Task LoginWithGoogle()
    {
        try
        {
            isLoading = true;
            isError = false;
            message = "Redirecionando para o Google...";
            StateHasChanged();
            
            Console.WriteLine("LoginWithGoogle executado!");
            
            // URL da API - redirecionamento DIRETO sem mostrar loading
            var googleAuthUrl = "https://talentlink-wd88.onrender.com/auth/google/CANDIDATO";
            
            Console.WriteLine($"Redirecionando diretamente para: {googleAuthUrl}");
            
            // Aguarda um pouco para mostrar o loading
            await Task.Delay(500);
            
            // Redirecionar para o Google OAuth
            Navigation.NavigateTo(googleAuthUrl, forceLoad: true);
            
        }
        catch (Exception ex)
        {
            isLoading = false;
            isError = true;
            message = $"❌ Erro ao conectar: {ex.Message}";
            Console.WriteLine($"Erro no login: {ex.Message}");
            StateHasChanged();
        }
    }
}
